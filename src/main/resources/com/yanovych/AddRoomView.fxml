<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox style="-fx-background-color: #c9deff;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yanovych.controllers.AddRoomViewController">
    <stylesheets>
        <URL value="@css/GameRoomStyles.css" />
    </stylesheets>
    <children>
        <HBox alignment="CENTER">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Room details" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding></HBox>
      <Separator prefWidth="200.0" />
        <HBox alignment="CENTER">
            <children>
                <Label text="Name:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="55.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="roomNameInput" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Enter name">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin></HBox>
        <HBox alignment="CENTER">
            <children>
                <Label text="Toy capacity:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="roomCapacityInput" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Enter capacity">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin></HBox>
        <HBox alignment="CENTER">
            <children>
                <Label text="Budget:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="20.0" right="15.0" top="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="roomBudgetInput" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Enter budget">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin></HBox>
        <HBox alignment="CENTER">
            <children>
                <Label text="Min age:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="35.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="roomMinAgeInput" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Enter minimum child age">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin></HBox>
        <HBox alignment="CENTER">
            <children>
                <Label text="Max age:">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="35.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </Label>
                <TextField fx:id="roomMaxAgeInput" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Enter maximum child age">
                    <font>
                        <Font size="18.0" />
                    </font>
                </TextField>
            </children>
            <VBox.margin>
                <Insets left="10.0" right="10.0" />
            </VBox.margin></HBox>
      <Separator prefWidth="200.0" />
        <HBox alignment="CENTER">
            <children>
                <Button fx:id="saveRoomBtn" focusTraversable="false" mnemonicParsing="false" onAction="#onSaveRoomClicked" text="Save room">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="clearBtn" focusTraversable="false" mnemonicParsing="false" onAction="#onClearClicked" text="Clear">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
            </children></HBox>
    </children>

</VBox>
